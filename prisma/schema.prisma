// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    createdBy   User   @relation(fields: [createdById], references: [id])
    createdById String

    @@index([name])
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
    posts         Post[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

// Real Estate Models
model Suburb {
    id               String   @id @default(cuid())
    name             String   @unique
    postcode         String
    state            String   @default("NSW")
    
    // Geographic data
    latitude         Float
    longitude        Float
    boundaryGeoJson  Json?    // GeoJSON polygon for suburb boundary
    
    // Investment metrics
    medianPrice      Int?     // Median house price in AUD
    priceGrowth12m   Float?   // Percentage growth over 12 months
    rentalYield      Float?   // Annual rental yield percentage
    investmentScore  Float?   // Calculated score 0-100
    
    // Additional metrics
    populationSize   Int?
    averageIncome    Int?     // Median household income
    
    // Metadata
    createdAt        DateTime @default(now())
    lastUpdated      DateTime @updatedAt
    
    // Relations
    pointsOfInterest PointOfInterest[]
    
    @@index([name])
    @@index([investmentScore])
}

model PointOfInterest {
    id          String   @id @default(cuid())
    name        String
    type        String   // 'school', 'shopping', 'transport', 'park', 'medical'
    address     String?
    latitude    Float
    longitude   Float
    rating      Float?   // 0-5 star rating if applicable
    
    // Additional info stored as JSON (flexible for different POI types)
    metadata    Json?    // e.g., for schools: {ranking, students}, for transport: {type, lines}
    
    suburb      Suburb   @relation(fields: [suburbId], references: [id], onDelete: Cascade)
    suburbId    String
    
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    
    @@index([suburbId])
    @@index([type])
}
